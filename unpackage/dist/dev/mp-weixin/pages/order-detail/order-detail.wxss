.content {
  background-color: #fef5f7;
  min-height: 100vh;
  padding-bottom: 120rpx;
}
.order-card, .store-card, .booking-card {
  background-color: #fff8fa;
  border-radius: 16rpx;
  margin: 20rpx;
  border: 1rpx solid #ffe4e8;
  overflow: hidden;
}
.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #ffe4e8;
}

/* 订单信息卡片 */
.order-card .order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #ffe4e8;
}
.order-card .order-header .order-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.order-card .order-header .order-no {
  font-size: 26rpx;
  color: #999;
}
.order-card .order-status-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
}
.order-card .order-status-info .status {
  font-size: 28rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}
.order-card .order-status-info .status.paid {
  background-color: #f6ffed;
  color: #52c41a;
}
.order-card .order-status-info .status.completed {
  background-color: #fff0f5;
  color: #FF69B4;
}
.order-card .order-status-info .status.refunding {
  background-color: #fff7e6;
  color: #fa8c16;
}
.order-card .order-status-info .status.refunded {
  background-color: #f0f9ff;
  color: #1890ff;
}
.order-card .order-status-info .order-time {
  font-size: 24rpx;
  color: #999;
}

/* 门店信息卡片 */
.store-info {
  padding: 20rpx 30rpx 30rpx;
}
.store-info .store-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.store-info .store-header .store-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.store-info .store-header .store-status {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
}
.store-info .store-header .store-status.open {
  background-color: #E8F5E8;
  color: #4CAF50;
}
.store-info .store-details {
  margin-bottom: 30rpx;
}
.store-info .store-details .detail-item {
  display: flex;
  margin-bottom: 12rpx;
}
.store-info .store-details .detail-item .detail-label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
}
.store-info .store-details .detail-item .detail-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}
.store-info .store-details .detail-item .detail-value.phone-number {
  color: #FF69B4;
  text-decoration: underline;
}
.store-info .store-actions {
  display: flex;
  gap: 20rpx;
}
.store-info .store-actions .action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 28rpx;
}
.store-info .store-actions .action-btn.navigation {
  background-color: #e6f3ff;
  color: #1890ff;
}
.store-info .store-actions .action-btn.call {
  background-color: #fff0f5;
  color: #FF69B4;
}
.store-info .store-actions .action-btn .btn-icon {
  font-size: 32rpx;
}

/* 预订信息卡片 */
.booking-info {
  padding: 20rpx 30rpx 30rpx;
}
.booking-info .product-section {
  display: flex;
  margin-bottom: 30rpx;
}
.booking-info .product-section .product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}
.booking-info .product-section .product-details {
  flex: 1;
}
.booking-info .product-section .product-details .product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.booking-info .product-section .product-details .product-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}
.booking-info .product-section .product-details .booking-time .time-info, .booking-info .product-section .product-details .booking-time .quantity-info {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 4rpx;
}
.booking-info .room-info {
  background-color: #f0f9ff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border: 1rpx solid #e0f2fe;
}
.booking-info .room-info .room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.booking-info .room-info .room-header .room-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.booking-info .room-info .room-header .room-status {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
}
.booking-info .room-info .room-header .room-status.status-available {
  background-color: #E8F5E8;
  color: #4CAF50;
}
.booking-info .room-info .room-header .room-status.status-cleaning {
  background-color: #FFF3E0;
  color: #FF9800;
}
.booking-info .room-info .room-header .room-status.status-using {
  background-color: #FFEBEE;
  color: #F44336;
}
.booking-info .room-info .room-details text {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 4rpx;
}
.booking-info .price-summary {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #ffe4e8;
}
.booking-info .price-summary .total-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}
.booking-info .price-summary .total-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

/* 操作按钮区域 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #ffe4e8;
}
.action-section .main-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.action-section .main-btn.refund {
  background-color: #fff7e6;
  color: #fa8c16;
}
.action-section .main-btn.unlock {
  background-color: #f6ffed;
  color: #52c41a;
}
.action-section .main-btn.unlock:disabled {
  background-color: #f5f5f5;
  color: #999;
}
.action-section .main-btn .btn-icon {
  font-size: 36rpx;
}
.action-section .status-info {
  width: 100%;
  padding: 20rpx;
  background-color: #fff7e6;
  border-radius: 12rpx;
  text-align: center;
}
.action-section .status-info .status-text {
  font-size: 28rpx;
  color: #fa8c16;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}
.action-section .status-info .status-note, .action-section .status-info .status-amount {
  font-size: 24rpx;
  color: #999;
  display: block;
}
.action-section .status-info.refunded {
  background-color: #f0f9ff;
}
.action-section .status-info.refunded .status-text {
  color: #1890ff;
}
.action-section .status-info.refunded .status-amount {
  color: #1890ff;
  font-weight: 500;
}

/* 退款弹窗 */
.refund-popup {
  width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.refund-popup .popup-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}
.refund-popup .popup-header .popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.refund-popup .popup-content {
  padding: 30rpx;
}
.refund-popup .popup-content .refund-info {
  margin-bottom: 30rpx;
}
.refund-popup .popup-content .refund-info .refund-text {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}
.refund-popup .popup-content .refund-info .refund-rate {
  font-size: 26rpx;
  color: #FF69B4;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}
.refund-popup .popup-content .refund-info .refund-rules {
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #FF69B4;
}
.refund-popup .popup-content .refund-info .refund-rules .rules-title {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 12rpx;
}
.refund-popup .popup-content .refund-info .refund-rules .rule-item {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 6rpx;
  line-height: 1.4;
}
.refund-popup .popup-content .refund-info .refund-rules .rule-item:last-child {
  margin-bottom: 0;
}
.refund-popup .popup-content .refund-info .refund-note {
  font-size: 24rpx;
  color: #999;
  display: block;
}
.refund-popup .popup-content .reason-section {
  margin-bottom: 30rpx;
}
.refund-popup .popup-content .reason-section .reason-label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}
.refund-popup .popup-content .reason-section .reason-picker {
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.refund-popup .popup-content .reason-section .reason-picker .picker-arrow {
  color: #999;
}
.refund-popup .popup-content .remark-section .remark-label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}
.refund-popup .popup-content .remark-section .remark-input {
  width: 100%;
  height: 120rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}
.refund-popup .popup-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}
.refund-popup .popup-actions .popup-btn {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.refund-popup .popup-actions .popup-btn.cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}
.refund-popup .popup-actions .popup-btn.confirm {
  color: #FF69B4;
  font-weight: bold;
}

/* 到店指引视频弹窗 */
.store-guide-popup {
  width: 700rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.store-guide-popup .popup-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}
.store-guide-popup .popup-header .popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.store-guide-popup .popup-header .popup-close {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 32rpx;
  color: #999;
  cursor: pointer;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background-color 0.3s;
}
.store-guide-popup .popup-header .popup-close:hover {
  background-color: #f5f5f5;
}
.store-guide-popup .popup-content {
  padding: 30rpx;
}
.store-guide-popup .popup-content .video-container {
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.store-guide-popup .popup-content .video-container .guide-video {
  width: 100%;
  height: 400rpx;
  background-color: #000;
}
.store-guide-popup .popup-content .guide-info {
  text-align: center;
}
.store-guide-popup .popup-content .guide-info .guide-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}
.store-guide-popup .popup-content .guide-info .guide-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}