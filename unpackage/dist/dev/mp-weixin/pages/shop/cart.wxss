.content {
  background-color: #fef8fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部 */
.header {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.header .edit-btn {
  font-size: 28rpx;
  color: #FFB6C1;
}

/* 购物车列表 */
.cart-list .cart-item {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.cart-list .cart-item .checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart-list .cart-item .checkbox .checkbox-icon {
  font-size: 24rpx;
  color: transparent;
}
.cart-list .cart-item .checkbox .checkbox-icon.selected {
  color: #FFB6C1;
}
.cart-list .cart-item .item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
}
.cart-list .cart-item .item-info {
  flex: 1;
}
.cart-list .cart-item .item-info .item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.cart-list .cart-item .item-info .item-spec {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}
.cart-list .cart-item .item-info .item-price-section {
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.cart-list .cart-item .item-info .item-price-section .item-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #FFB6C1;
}
.cart-list .cart-item .item-info .item-price-section .item-original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}
.cart-list .cart-item .quantity-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.cart-list .cart-item .quantity-control .quantity-btn {
  width: 50rpx;
  height: 50rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
}
.cart-list .cart-item .quantity-control .quantity-btn:disabled {
  background-color: #f5f5f5;
  color: #ccc;
}
.cart-list .cart-item .quantity-control .quantity-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  min-width: 60rpx;
  text-align: center;
}
.cart-list .cart-item .delete-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #ff4757;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart-list .cart-item .delete-btn .delete-icon {
  font-size: 28rpx;
}

/* 空购物车 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}
.empty-cart .empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}
.empty-cart .empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}
.empty-cart .go-shopping-btn {
  background-color: #FFB6C1;
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 底部结算栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.bottom-bar .select-all {
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.bottom-bar .select-all .checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bottom-bar .select-all .checkbox .checkbox-icon {
  font-size: 24rpx;
  color: transparent;
}
.bottom-bar .select-all .checkbox .checkbox-icon.selected {
  color: #FFB6C1;
}
.bottom-bar .select-all .select-all-text {
  font-size: 28rpx;
  color: #333;
}
.bottom-bar .total-section {
  flex: 1;
}
.bottom-bar .total-section .total-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 4rpx;
}
.bottom-bar .total-section .total-info .total-label {
  font-size: 28rpx;
  color: #333;
}
.bottom-bar .total-section .total-info .total-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFB6C1;
}
.bottom-bar .total-section .total-desc {
  font-size: 24rpx;
  color: #999;
}
.bottom-bar .checkout-btn {
  background-color: #FFB6C1;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.bottom-bar .checkout-btn:disabled {
  background-color: #ccc;
}