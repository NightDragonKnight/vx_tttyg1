.content {
  background-color: #fef8fa;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 搜索栏 */
.search-section {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}
.search-section .search-bar {
  display: flex;
  gap: 20rpx;
}
.search-section .search-bar .search-input {
  flex: 1;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}
.search-section .search-bar .search-btn {
  background-color: #FFB6C1;
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
}

/* 分类选择 */
.category-section {
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.category-section .category-scroll {
  white-space: nowrap;
}
.category-section .category-list {
  display: flex;
  padding: 0 20rpx;
}
.category-section .category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  background-color: #f8f8f8;
  transition: all 0.3s ease;
}
.category-section .category-item.active {
  background-color: #FFB6C1;
  color: #fff;
}
.category-section .category-item .category-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}
.category-section .category-item .category-name {
  font-size: 24rpx;
}

/* 商品区域 */
.product-section {
  padding: 20rpx;
}
.product-section .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.product-section .section-header .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.product-section .section-header .sort-options {
  display: flex;
  gap: 20rpx;
}
.product-section .section-header .sort-options .sort-item {
  font-size: 26rpx;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}
.product-section .section-header .sort-options .sort-item.active {
  background-color: #FFB6C1;
  color: #fff;
}
.product-section .product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.product-section .product-grid .product-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}
.product-section .product-grid .product-card:active {
  transform: scale(0.98);
}
.product-section .product-grid .product-card .product-image {
  width: 100%;
  height: 300rpx;
}
.product-section .product-grid .product-card .product-info {
  padding: 20rpx;
}
.product-section .product-grid .product-card .product-info .product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.product-section .product-grid .product-card .product-info .product-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.product-section .product-grid .product-card .product-info .product-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}
.product-section .product-grid .product-card .product-info .product-meta .product-sales, .product-section .product-grid .product-card .product-info .product-meta .product-rating {
  font-size: 22rpx;
  color: #999;
}
.product-section .product-grid .product-card .product-info .product-price-section {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 15rpx;
}
.product-section .product-grid .product-card .product-info .product-price-section .product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFB6C1;
}
.product-section .product-grid .product-card .product-info .product-price-section .product-original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}
.product-section .product-grid .product-card .product-actions {
  padding: 0 20rpx 20rpx;
}
.product-section .product-grid .product-card .product-actions .buy-btn {
  width: 100%;
  height: 60rpx;
  background-color: #FFB6C1;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.empty-state .empty-text {
  font-size: 28rpx;
  color: #999;
}