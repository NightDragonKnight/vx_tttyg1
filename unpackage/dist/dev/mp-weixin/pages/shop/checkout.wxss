.content {
  background-color: #fef8fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 通用样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 地址区域 */
.address-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.address-section .address-card {
  background-color: #f8f8f8;
  padding: 30rpx;
  border-radius: 12rpx;
  position: relative;
}
.address-section .address-card .address-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 10rpx;
}
.address-section .address-card .address-info .contact-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.address-section .address-card .address-info .contact-phone {
  font-size: 26rpx;
  color: #666;
}
.address-section .address-card .address-detail {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}
.address-section .address-card .no-address .no-address-text {
  font-size: 28rpx;
  color: #999;
}
.address-section .address-card .address-arrow {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999;
}

/* 商品区域 */
.products-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.products-section .product-list .product-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.products-section .product-list .product-item:last-child {
  border-bottom: none;
}
.products-section .product-list .product-item .product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}
.products-section .product-list .product-item .product-info {
  flex: 1;
}
.products-section .product-list .product-item .product-info .product-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.products-section .product-list .product-item .product-info .product-spec {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}
.products-section .product-list .product-item .product-info .product-price-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.products-section .product-list .product-item .product-info .product-price-section .product-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #FFB6C1;
}
.products-section .product-list .product-item .product-info .product-price-section .product-quantity {
  font-size: 24rpx;
  color: #999;
}

/* 配送方式 */
.delivery-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.delivery-section .delivery-options .delivery-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.delivery-section .delivery-options .delivery-option:last-child {
  border-bottom: none;
}
.delivery-section .delivery-options .delivery-option.active .delivery-name {
  color: #FFB6C1;
}
.delivery-section .delivery-options .delivery-option.active .delivery-fee {
  color: #FFB6C1;
}
.delivery-section .delivery-options .delivery-option .delivery-name {
  font-size: 28rpx;
  color: #333;
}
.delivery-section .delivery-options .delivery-option .delivery-fee {
  font-size: 26rpx;
  color: #666;
}

/* 支付方式 */
.payment-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.payment-section .payment-options .payment-option {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.payment-section .payment-options .payment-option:last-child {
  border-bottom: none;
}
.payment-section .payment-options .payment-option.active .payment-name {
  color: #FFB6C1;
}
.payment-section .payment-options .payment-option.active .payment-arrow {
  color: #FFB6C1;
}
.payment-section .payment-options .payment-option .payment-icon {
  font-size: 32rpx;
}
.payment-section .payment-options .payment-option .payment-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.payment-section .payment-options .payment-option .payment-arrow {
  font-size: 28rpx;
  color: #ccc;
}
.payment-section .payment-options .payment-option .payment-arrow.selected {
  color: #FFB6C1;
}

/* 订单备注 */
.remark-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.remark-section .remark-input {
  width: 100%;
  height: 120rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

/* 价格明细 */
.price-section {
  background-color: #fff;
  padding: 30rpx;
}
.price-section .price-list .price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #666;
}
.price-section .price-list .price-item.total {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.price-section .price-list .price-item .price-value {
  color: #FFB6C1;
}
.price-section .price-list .price-item .final-price {
  color: #FFB6C1;
  font-size: 36rpx;
}

/* 底部结算栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bottom-bar .price-summary {
  display: flex;
  align-items: center;
}
.bottom-bar .price-summary .summary-label {
  font-size: 28rpx;
  color: #666;
}
.bottom-bar .price-summary .summary-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFB6C1;
}
.bottom-bar .pay-btn {
  background-color: #FFB6C1;
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.bottom-bar .pay-btn:disabled {
  background-color: #ccc;
}