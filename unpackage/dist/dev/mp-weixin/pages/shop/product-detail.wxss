.content {
  background-color: #fef8fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 商品轮播图 */
.product-swiper .swiper {
  height: 500rpx;
}
.product-swiper .swiper .swiper-image {
  width: 100%;
  height: 100%;
}

/* 商品信息 */
.product-info {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.product-info .price-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}
.product-info .price-section .current-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFB6C1;
}
.product-info .price-section .original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}
.product-info .price-section .discount-tag {
  background-color: #ff4757;
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}
.product-info .product-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}
.product-info .product-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.5;
}
.product-info .product-meta {
  display: flex;
  gap: 30rpx;
}
.product-info .product-meta .sales-info, .product-info .product-meta .rating-info, .product-info .product-meta .stock-info {
  font-size: 24rpx;
  color: #999;
}

/* 规格选择 */
.spec-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.spec-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.spec-section .spec-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.spec-section .spec-list .spec-item {
  padding: 20rpx 30rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  background-color: #fafafa;
  transition: all 0.3s ease;
}
.spec-section .spec-list .spec-item.active {
  border-color: #FFB6C1;
  background-color: #fef8fa;
}
.spec-section .spec-list .spec-item .spec-text {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.spec-section .spec-list .spec-item .spec-price {
  font-size: 24rpx;
  color: #FFB6C1;
}

/* 数量选择 */
.quantity-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.quantity-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.quantity-section .quantity-control {
  display: flex;
  align-items: center;
  gap: 30rpx;
}
.quantity-section .quantity-control .quantity-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
}
.quantity-section .quantity-control .quantity-btn:disabled {
  background-color: #f5f5f5;
  color: #ccc;
}
.quantity-section .quantity-control .quantity-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  min-width: 80rpx;
  text-align: center;
}

/* 商品详情 */
.detail-section {
  background-color: #fff;
  padding: 30rpx;
}
.detail-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.detail-section .detail-content .detail-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-line;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.bottom-bar .left-actions {
  flex: 1;
}
.bottom-bar .left-actions .action-btn {
  width: 100%;
  height: 80rpx;
  background-color: #fef8fa;
  color: #FFB6C1;
  border: 2rpx solid #FFB6C1;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
.bottom-bar .left-actions .action-btn .btn-icon {
  font-size: 32rpx;
}
.bottom-bar .left-actions .action-btn .btn-text {
  font-size: 28rpx;
}
.bottom-bar .right-actions {
  flex: 1;
}
.bottom-bar .right-actions .buy-btn {
  width: 100%;
  height: 80rpx;
  background-color: #FFB6C1;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}