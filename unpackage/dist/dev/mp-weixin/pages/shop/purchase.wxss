.content {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 通用样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

/* 商品信息 */
.product-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx 0;
}
.product-section .product-card {
  display: flex;
  padding: 0 30rpx;
}
.product-section .product-card .product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}
.product-section .product-card .product-info {
  flex: 1;
}
.product-section .product-card .product-info .product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.product-section .product-card .product-info .product-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}
.product-section .product-card .product-info .product-spec {
  margin-bottom: 10rpx;
}
.product-section .product-card .product-info .product-spec .spec-label {
  font-size: 24rpx;
  color: #999;
}
.product-section .product-card .product-info .product-spec .spec-value {
  font-size: 24rpx;
  color: #FFB6C1;
  font-weight: 500;
}
.product-section .product-card .product-info .product-price {
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.product-section .product-card .product-info .product-price .current-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFB6C1;
}
.product-section .product-card .product-info .product-price .original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

/* 数量选择 */
.quantity-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.quantity-section .quantity-control {
  display: flex;
  align-items: center;
  gap: 30rpx;
}
.quantity-section .quantity-control .quantity-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
}
.quantity-section .quantity-control .quantity-btn:disabled {
  background-color: #f5f5f5;
  color: #ccc;
}
.quantity-section .quantity-control .quantity-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  min-width: 80rpx;
  text-align: center;
}

/* 收货地址 */
.address-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.address-section .address-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}
.address-section .address-card .address-info {
  flex: 1;
}
.address-section .address-card .address-info .address-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 10rpx;
}
.address-section .address-card .address-info .address-header .contact-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.address-section .address-card .address-info .address-header .contact-phone {
  font-size: 24rpx;
  color: #666;
}
.address-section .address-card .address-info .address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}
.address-section .address-card .no-address {
  flex: 1;
  text-align: center;
}
.address-section .address-card .no-address .no-address-text {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}
.address-section .address-card .no-address .add-address-btn {
  font-size: 24rpx;
  color: #FFB6C1;
}
.address-section .address-card .arrow {
  font-size: 24rpx;
  color: #999;
}

/* 配送方式 */
.delivery-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.delivery-section .delivery-options {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}
.delivery-section .delivery-options .delivery-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}
.delivery-section .delivery-options .delivery-option.active {
  border-color: #FFB6C1;
  background-color: #fef8fa;
}
.delivery-section .delivery-options .delivery-option .delivery-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.delivery-section .delivery-options .delivery-option .delivery-desc {
  font-size: 24rpx;
  color: #666;
  margin-left: 20rpx;
}
.delivery-section .delivery-options .delivery-option .delivery-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #FFB6C1;
}

/* 支付方式 */
.payment-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.payment-section .payment-options {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}
.payment-section .payment-options .payment-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}
.payment-section .payment-options .payment-option.active {
  border-color: #FFB6C1;
  background-color: #fef8fa;
}
.payment-section .payment-options .payment-option .payment-info {
  display: flex;
  align-items: center;
  gap: 15rpx;
}
.payment-section .payment-options .payment-option .payment-info .payment-icon {
  font-size: 32rpx;
}
.payment-section .payment-options .payment-option .payment-info .payment-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.payment-section .payment-options .payment-option .payment-desc {
  font-size: 24rpx;
  color: #666;
}

/* 订单备注 */
.remark-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
  position: relative;
}
.remark-section .remark-input {
  width: 100%;
  height: 120rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}
.remark-section .remark-count {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  font-size: 22rpx;
  color: #999;
}

/* 价格明细 */
.price-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.price-section .price-list .price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}
.price-section .price-list .price-item .price-label {
  font-size: 26rpx;
  color: #666;
}
.price-section .price-list .price-item .price-value {
  font-size: 26rpx;
  color: #333;
}
.price-section .price-list .price-item.total {
  margin-top: 20rpx;
}
.price-section .price-list .price-item.total .price-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.price-section .price-list .price-item.total .price-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFB6C1;
}
.price-section .price-list .price-divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

/* 底部支付栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bottom-bar .price-summary .total-label {
  font-size: 26rpx;
  color: #666;
}
.bottom-bar .price-summary .total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFB6C1;
}
.bottom-bar .pay-btn {
  background-color: #FFB6C1;
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.bottom-bar .pay-btn:disabled {
  background-color: #ccc;
  color: #999;
}