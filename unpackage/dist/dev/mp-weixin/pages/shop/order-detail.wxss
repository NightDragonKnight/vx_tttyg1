.content {
  background-color: #fef8fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 状态区域 */
.status-section {
  background: linear-gradient(135deg, #FFB6C1 0%, #FFC0CB 100%);
  padding: 60rpx 30rpx;
  color: #fff;
}
.status-section .status-info {
  text-align: center;
}
.status-section .status-info .status-text {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}
.status-section .status-info .status-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 通用样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 订单信息 */
.order-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.order-section .order-info .info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}
.order-section .order-info .info-item:last-child {
  margin-bottom: 0;
}
.order-section .order-info .info-item .info-label {
  font-size: 26rpx;
  color: #666;
}
.order-section .order-info .info-item .info-value {
  font-size: 26rpx;
  color: #333;
}

/* 地址信息 */
.address-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.address-section .address-info .contact-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.address-section .address-info .contact-phone {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}
.address-section .address-info .address-detail {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

/* 商品列表 */
.products-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.products-section .product-list .product-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.products-section .product-list .product-item:last-child {
  border-bottom: none;
}
.products-section .product-list .product-item .product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}
.products-section .product-list .product-item .product-info {
  flex: 1;
}
.products-section .product-list .product-item .product-info .product-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.products-section .product-list .product-item .product-info .product-spec {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}
.products-section .product-list .product-item .product-info .product-price-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.products-section .product-list .product-item .product-info .product-price-section .product-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #FFB6C1;
}
.products-section .product-list .product-item .product-info .product-price-section .product-quantity {
  font-size: 24rpx;
  color: #999;
}

/* 价格明细 */
.price-section {
  background-color: #fff;
  padding: 30rpx;
}
.price-section .price-list .price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #666;
}
.price-section .price-list .price-item.total {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.price-section .price-list .price-item .price-value {
  color: #FFB6C1;
}
.price-section .price-list .price-item .final-price {
  color: #FFB6C1;
  font-size: 36rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}
.bottom-bar .action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.bottom-bar .action-btn.secondary {
  background-color: #fff;
  color: #FFB6C1;
  border: 2rpx solid #FFB6C1;
}
.bottom-bar .action-btn.primary {
  background-color: #FFB6C1;
  color: #fff;
}