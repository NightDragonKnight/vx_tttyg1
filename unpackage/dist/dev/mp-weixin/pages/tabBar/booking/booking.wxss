.content {
  padding: 20rpx;
  background-color: #fef5f7;
  min-height: 100vh;
}
.header {
  text-align: center;
  padding: 20rpx 0;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.search-section {
  background-color: #fff8fa;
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 30rpx;
  border: 1rpx solid #ffe4e8;
  display: flex;
  gap: 30rpx;
}
.search-section .search-group {
  flex: 1;
}
.search-section .search-group .search-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.search-section .search-group .picker-btn {
  height: 80rpx;
  background-color: #fff0f5;
  border-radius: 12rpx;
  border: 1rpx solid #ffe4e8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}
.search-section .search-group .picker-btn .picker-arrow {
  color: #999;
  font-size: 24rpx;
}
.booking-list .booking-item {
  background-color: #fff8fa;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  border: 1rpx solid #ffe4e8;
}
.booking-list .booking-item .booking-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #ffe4e8;
}
.booking-list .booking-item .booking-header .order-no {
  font-size: 26rpx;
  color: #666;
}
.booking-list .booking-item .booking-header .status {
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}
.booking-list .booking-item .booking-header .status.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}
.booking-list .booking-item .booking-header .status.paid {
  background-color: #f6ffed;
  color: #52c41a;
}
.booking-list .booking-item .booking-header .status.completed {
  background-color: #fff0f5;
  color: #FF69B4;
}
.booking-list .booking-item .booking-header .status.refunding {
  background-color: #fff7e6;
  color: #fa8c16;
}
.booking-list .booking-item .booking-header .status.refunded {
  background-color: #f0f9ff;
  color: #1890ff;
}
.booking-list .booking-item .booking-content {
  display: flex;
  padding: 30rpx;
}
.booking-list .booking-item .booking-content .product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}
.booking-list .booking-item .booking-content .product-info {
  flex: 1;
}
.booking-list .booking-item .booking-content .product-info .product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.booking-list .booking-item .booking-content .product-info .product-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}
.booking-list .booking-item .booking-content .product-info .booking-details {
  margin-bottom: 20rpx;
}
.booking-list .booking-item .booking-content .product-info .booking-details text {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}
.booking-list .booking-item .booking-content .product-info .booking-details .store {
  color: #FF69B4;
  font-weight: 500;
}
.booking-list .booking-item .booking-content .product-info .price-info .total-price {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
}
.booking-list .booking-item .booking-footer {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #ffe4e8;
  gap: 20rpx;
}
.booking-list .booking-item .booking-footer .action-btn {
  padding: 16rpx 32rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}
.booking-list .booking-item .booking-footer .action-btn.cancel {
  background-color: #fff8fa;
  color: #666;
  border: 1rpx solid #ffe4e8;
}
.booking-list .booking-item .booking-footer .action-btn.primary {
  background-color: #FF69B4;
  color: #fff;
}
.booking-list .booking-item .booking-footer .action-btn.secondary {
  background-color: #fff0f5;
  color: #FF69B4;
  border: 1rpx solid #ffe4e8;
}
.booking-list .booking-item .booking-footer .action-btn.unlock {
  background-color: #4CAF50;
  color: #fff;
}
.booking-list .booking-item .booking-footer .paid-actions {
  width: 100%;
}
.booking-list .booking-item .booking-footer .paid-actions .room-status {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.booking-list .booking-item .booking-footer .paid-actions .room-status .status-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}
.booking-list .booking-item .booking-footer .paid-actions .room-status .status-value {
  font-size: 26rpx;
  font-weight: bold;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}
.booking-list .booking-item .booking-footer .paid-actions .room-status .status-value.status-available {
  background-color: #E8F5E8;
  color: #4CAF50;
}
.booking-list .booking-item .booking-footer .paid-actions .room-status .status-value.status-cleaning {
  background-color: #FFF3E0;
  color: #FF9800;
}
.booking-list .booking-item .booking-footer .paid-actions .room-status .status-value.status-using {
  background-color: #FFEBEE;
  color: #F44336;
}
.booking-list .booking-item .booking-footer .paid-actions .room-status .room-number {
  font-size: 24rpx;
  color: #999;
}
.booking-list .booking-item .booking-footer .paid-actions .action-buttons {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}
.booking-list .booking-item .booking-footer .refund-info, .booking-list .booking-item .booking-footer .refunded-info {
  width: 100%;
}
.booking-list .booking-item .booking-footer .refund-info .refund-text, .booking-list .booking-item .booking-footer .refunded-info .refund-text {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
  line-height: 1.4;
}
.booking-list .booking-item .booking-footer .refunded-info .refund-text {
  color: #1890ff;
  font-weight: 500;
}
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.empty-state .empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.empty-state .empty-text {
  font-size: 28rpx;
  color: #999;
}