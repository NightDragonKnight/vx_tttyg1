/* 公告弹窗样式 */
.announcement-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: overlayShow 0.3s ease-out;
}
@keyframes overlayShow {
0% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}
.announcement-popup {
  width: 90%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  z-index: 1000;
  overflow: hidden;
  animation: popupShow 0.3s ease-out;
}
@keyframes popupShow {
0% {
    opacity: 0;
    transform: scale(0.8);
}
100% {
    opacity: 1;
    transform: scale(1);
}
}
.announcement-header {
  background: linear-gradient(135deg, #FFB6C1 0%, #FFC0CB 100%);
  padding: 30rpx;
  text-align: center;
}
.announcement-header .announcement-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}
.announcement-content {
  padding: 30rpx;
  max-height: 500rpx;
  overflow-y: auto;
}
.announcement-content .announcement-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-line;
}
.announcement-footer {
  padding: 20rpx 30rpx 30rpx;
  text-align: center;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}
.announcement-footer .read-btn {
  background: linear-gradient(135deg, #FFB6C1 0%, #FFC0CB 100%);
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 6rpx 15rpx rgba(255, 182, 193, 0.3);
  transition: all 0.2s ease;
}
.announcement-footer .read-btn:active {
  transform: scale(0.95);
  box-shadow: 0 3rpx 8rpx rgba(255, 182, 193, 0.4);
}

/* 轮播图样式 */
.swiper-section {
  position: relative;
  /* 轮播图信息覆盖层 */
  /* 轮播图指示器 */
}
.swiper-section .swiper {
  height: 400rpx;
}
.swiper-section .swiper .swiper-image {
  width: 100%;
  height: 100%;
}
.swiper-section .banner-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 40rpx 30rpx 30rpx;
  color: #fff;
}
.swiper-section .banner-info .banner-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}
.swiper-section .banner-info .banner-desc {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
}
.swiper-section .swiper-indicator {
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  display: flex;
  gap: 12rpx;
}
.swiper-section .swiper-indicator .indicator-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}
.swiper-section .swiper-indicator .indicator-dot.active {
  background-color: #FFB6C1;
  transform: scale(1.2);
}

/* 主要功能区域样式 */
.main-functions {
  padding: 30rpx 20rpx;
  background-color: #fef8fa;
  margin: 20rpx;
  border-radius: 16rpx;
  border: 1rpx solid #ffe8ec;
  /* 商品出售功能 */
  /* 体验馆大功能 */
}
.main-functions .shop-section {
  margin-bottom: 40rpx;
  background-color: #f0f8ff;
  border-radius: 16rpx;
  padding: 30rpx 0;
  border: 2rpx solid #FFB6C1;
}
.main-functions .shop-section .category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15rpx;
  padding: 0 20rpx;
}
.main-functions .shop-section .category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 25rpx 15rpx;
  background-color: transparent;
  border-radius: 8rpx;
  box-shadow: none;
  transition: all 0.3s ease;
  aspect-ratio: 1;
}
.main-functions .shop-section .category-item:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.3);
}
.main-functions .shop-section .category-item .category-icon {
  font-size: 50rpx;
  color: #FFB6C1;
  margin-bottom: 8rpx;
}
.main-functions .shop-section .category-item .category-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  font-weight: 500;
}
.main-functions .main-function {
  position: relative;
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  border: 2rpx solid #FFB6C1;
}
.main-functions .main-function .function-bg-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

/* 热门推荐样式 */
.section {
  background-color: #fef8fa;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  border: 1rpx solid #ffe8ec;
}
.section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.section .section-title .test-btn {
  font-size: 24rpx;
  padding: 10rpx;
  background-color: rgba(255, 182, 193, 0.1);
  border-radius: 50%;
  color: #FFB6C1;
}
.section .product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.section .product-list .product-item {
  width: 48%;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #fef8fa;
  border: 1rpx solid #ffe8ec;
  transition: all 0.3s ease;
}
.section .product-list .product-item:active {
  transform: scale(0.95);
}
.section .product-list .product-item .product-image {
  width: 100%;
  height: 200rpx;
}
.section .product-list .product-item .product-info {
  padding: 20rpx;
}
.section .product-list .product-item .product-info .product-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.section .product-list .product-item .product-info .product-price {
  font-size: 32rpx;
  color: #FFB6C1;
  font-weight: bold;
}