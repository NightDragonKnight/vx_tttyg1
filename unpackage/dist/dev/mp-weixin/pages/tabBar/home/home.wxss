/* 主要功能区域样式 */
.main-functions {
  padding: 30rpx 20rpx;
  background-color: #fff8fa;
  margin: 20rpx;
  border-radius: 16rpx;
  border: 1rpx solid #ffe4e8;
  /* 体验馆大功能 */
  /* 三个小功能 */
}
.main-functions .main-function {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #FF69B4 0%, #FF1493 100%);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}
.main-functions .main-function .main-function-icon {
  width: 100rpx;
  height: 100rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}
.main-functions .main-function .main-function-icon .iconfont {
  color: #fff;
  font-size: 60rpx;
}
.main-functions .main-function .main-function-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}
.main-functions .sub-functions {
  display: flex;
  justify-content: space-between;
}
.main-functions .sub-functions .sub-function {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #fff0f5;
  border-radius: 12rpx;
  margin: 0 10rpx;
  border: 1rpx solid #ffe4e8;
}
.main-functions .sub-functions .sub-function:first-child {
  margin-left: 0;
}
.main-functions .sub-functions .sub-function:last-child {
  margin-right: 0;
}
.main-functions .sub-functions .sub-function .sub-function-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #FF69B4;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}
.main-functions .sub-functions .sub-function .sub-function-icon .iconfont {
  color: #fff;
  font-size: 50rpx;
}
.main-functions .sub-functions .sub-function .sub-function-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 热门推荐样式 */
.section {
  background-color: #fff8fa;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  border: 1rpx solid #ffe4e8;
}
.section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}
.section .product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.section .product-list .product-item {
  width: 48%;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #fff0f5;
  border: 1rpx solid #ffe4e8;
}
.section .product-list .product-item .product-image {
  width: 100%;
  height: 200rpx;
}
.section .product-list .product-item .product-info {
  padding: 20rpx;
}
.section .product-list .product-item .product-info .product-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.section .product-list .product-item .product-info .product-price {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: bold;
}