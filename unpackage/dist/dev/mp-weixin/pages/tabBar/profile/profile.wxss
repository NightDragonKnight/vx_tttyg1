/* 用户信息头部 */
.user-info {
  background: linear-gradient(135deg, #FF69B4 0%, #FF1493 100%);
  padding: 60rpx 40rpx 40rpx;
  color: #fff;
  box-shadow: 0 4rpx 20rpx rgba(255, 105, 180, 0.4);
}
.user-info .avatar-section {
  display: flex;
  align-items: center;
}
.user-info .avatar-section .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
}
.user-info .avatar-section .user-details {
  flex: 1;
}
.user-info .avatar-section .user-details .username {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}
.user-info .avatar-section .user-details .user-level {
  font-size: 26rpx;
  color: #fff;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}
.user-info .avatar-section .login-tip {
  background-color: rgba(255, 255, 255, 0.35);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.3);
}
.user-info .avatar-section .login-tip text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}
.user-info .avatar-section .share-commission-btn {
  background: linear-gradient(135deg, #FF4500 0%, #FF6347 100%);
  color: #fff;
  border: 2rpx solid #FF4500;
  border-radius: 24rpx;
  padding: 12rpx 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(255, 69, 0, 0.6);
  position: relative;
  overflow: hidden;
}
.user-info .avatar-section .share-commission-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}
.user-info .avatar-section .share-commission-btn:hover::before {
  left: 100%;
}
.user-info .avatar-section .share-commission-btn .btn-icon {
  font-size: 28rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}
.user-info .avatar-section .share-commission-btn .btn-text {
  font-size: 24rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}
.user-info .avatar-section .share-commission-btn:active {
  transform: scale(0.95);
  box-shadow: 0 3rpx 8rpx rgba(255, 69, 0, 0.8);
  background: linear-gradient(135deg, #FF6347 0%, #FF4500 100%);
}

/* 账户信息卡片 */
.account-section {
  margin: 20rpx;
}
.account-section .account-card {
  background-color: #fff8fa;
  border-radius: 16rpx;
  border: 1rpx solid #ffe4e8;
  overflow: hidden;
}
.account-section .account-card .card-header {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #ffe4e8;
}
.account-section .account-card .card-header .card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.account-section .account-card .account-stats {
  display: flex;
  padding: 30rpx 0;
}
.account-section .account-card .account-stats .stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}
.account-section .account-card .account-stats .stat-item .stat-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFB6C1;
  display: block;
  margin-bottom: 8rpx;
}
.account-section .account-card .account-stats .stat-item .stat-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}
.account-section .account-card .account-stats .stat-item .stat-action {
  font-size: 22rpx;
  color: #999;
  padding: 4rpx 12rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  display: inline-block;
}
.account-section .account-card .account-stats .stat-divider {
  width: 1rpx;
  background-color: #ffe4e8;
  margin: 20rpx 0;
}

/* 快捷服务 */
.quick-services {
  margin: 20rpx;
}
.quick-services .service-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}
.quick-services .service-grid {
  display: flex;
  background-color: #fff8fa;
  border-radius: 16rpx;
  border: 1rpx solid #ffe4e8;
  padding: 30rpx 40rpx;
  justify-content: space-around;
  margin-bottom: 20rpx;
}
.quick-services .service-grid .service-item {
  text-align: center;
  min-width: 160rpx;
}
.quick-services .service-grid .service-item .service-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 12rpx;
}
.quick-services .service-grid .service-item .service-icon .icon-text {
  font-size: 36rpx;
}
.quick-services .service-grid .service-item .service-text {
  font-size: 24rpx;
  color: #333;
}

/* 退出登录 */
.logout-section {
  margin: 40rpx 20rpx;
}
.logout-section .logout-btn {
  width: 100%;
  height: 88rpx;
  background-color: #fff8fa;
  color: #FFB6C1;
  border: 1rpx solid #FFB6C1;
  border-radius: 16rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}