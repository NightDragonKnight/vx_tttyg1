.content {
  background-color: #fef5f7;
  min-height: 100vh;
}
.user-info {
  background: linear-gradient(135deg, #FF69B4 0%, #FF1493 100%);
  padding: 60rpx 40rpx 40rpx;
  color: #fff;
}
.user-info .avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.user-info .avatar-section .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
}
.user-info .avatar-section .user-details .username {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}
.user-info .avatar-section .user-details .user-level {
  font-size: 26rpx;
  opacity: 0.8;
}
.user-info .stats-section {
  display: flex;
  justify-content: space-around;
}
.user-info .stats-section .stat-item {
  text-align: center;
}
.user-info .stats-section .stat-item .stat-number {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}
.user-info .stats-section .stat-item .stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}
.menu-section {
  margin: 20rpx;
}
.menu-section .menu-group {
  background-color: #fff8fa;
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid #ffe4e8;
}
.menu-section .menu-group .menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #ffe4e8;
}
.menu-section .menu-group .menu-item:last-child {
  border-bottom: none;
}
.menu-section .menu-group .menu-item .menu-icon {
  width: 60rpx;
  height: 60rpx;
  background-color: #fff0f5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.menu-section .menu-group .menu-item .menu-icon .iconfont {
  color: #FF69B4;
  font-size: 32rpx;
}
.menu-section .menu-group .menu-item .menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}
.menu-section .menu-group .menu-item .menu-arrow {
  font-size: 28rpx;
  color: #999;
}
.quick-actions {
  margin: 20rpx;
  background-color: #fff8fa;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1rpx solid #ffe4e8;
}
.quick-actions .action-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ffe4e8;
}
.quick-actions .action-item:last-child {
  border-bottom: none;
}
.quick-actions .action-item .action-icon {
  width: 50rpx;
  height: 50rpx;
  background-color: #fff0f5;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.quick-actions .action-item .action-icon .iconfont {
  color: #FF69B4;
  font-size: 28rpx;
}
.quick-actions .action-item .action-text {
  font-size: 28rpx;
  color: #333;
}
.logout-section {
  margin: 40rpx 20rpx;
}
.logout-section .logout-btn {
  width: 100%;
  height: 88rpx;
  background-color: #fff8fa;
  color: #ff6b35;
  border: 1rpx solid #ff6b35;
  border-radius: 16rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}