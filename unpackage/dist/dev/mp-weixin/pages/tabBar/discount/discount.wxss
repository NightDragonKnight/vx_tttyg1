.content {
  padding: 20rpx;
  background-color: #fef5f7;
  min-height: 100vh;
}
.activity-list .activity-item {
  background-color: #fff8fa;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  border: 1rpx solid #ffe4e8;
  transition: all 0.3s ease;
}
.activity-list .activity-item:active {
  transform: scale(0.98);
}
.activity-list .activity-item .activity-image {
  position: relative;
}
.activity-list .activity-item .activity-image image {
  width: 100%;
  height: 300rpx;
}
.activity-list .activity-item .activity-image .activity-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}
.activity-list .activity-item .activity-image .activity-tag.active {
  background-color: #4CAF50;
  /* 进行中 - 绿色 */
}
.activity-list .activity-item .activity-image .activity-tag.hot {
  background-color: #FF6347;
  /* 火热 - 红色 */
}
.activity-list .activity-item .activity-image .activity-tag.new {
  background-color: #FF69B4;
  /* 最新 - 粉色 */
}
.activity-list .activity-item .activity-image .activity-tag.coming {
  background-color: #FFA500;
  /* 即将开始 - 橙色 */
}
.activity-list .activity-item .activity-image .activity-tag.ended {
  background-color: #999;
  /* 已结束 - 灰色 */
}
.activity-list .activity-item .activity-info {
  padding: 30rpx;
}
.activity-list .activity-item .activity-info .activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.4;
}
.activity-list .activity-item .activity-info .activity-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 24rpx;
  line-height: 1.5;
}
.activity-list .activity-item .activity-info .activity-details {
  margin-bottom: 24rpx;
}
.activity-list .activity-item .activity-info .activity-details .activity-time, .activity-list .activity-item .activity-info .activity-details .activity-location {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}
.activity-list .activity-item .activity-info .activity-details .activity-time .time-label, .activity-list .activity-item .activity-info .activity-details .activity-time .location-label, .activity-list .activity-item .activity-info .activity-details .activity-location .time-label, .activity-list .activity-item .activity-info .activity-details .activity-location .location-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
  min-width: 140rpx;
}
.activity-list .activity-item .activity-info .activity-details .activity-time .time-text, .activity-list .activity-item .activity-info .activity-details .activity-time .location-text, .activity-list .activity-item .activity-info .activity-details .activity-location .time-text, .activity-list .activity-item .activity-info .activity-details .activity-location .location-text {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}
.activity-list .activity-item .activity-info .activity-footer .participants-info .participants-text {
  font-size: 24rpx;
  color: #FF69B4;
  font-weight: bold;
}