.content {
  padding: 20rpx;
  background-color: #fef5f7;
  min-height: 100vh;
}
.header {
  text-align: center;
  padding: 20rpx 0;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.search-bar {
  display: flex;
  margin: 20rpx 0;
}
.search-bar .search-input {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx 0 0 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.search-bar .search-btn {
  width: 120rpx;
  height: 80rpx;
  background-color: #FF69B4;
  color: #fff;
  border-radius: 0 40rpx 40rpx 0;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.category-tabs {
  display: flex;
  background-color: #fff8fa;
  border-radius: 16rpx;
  margin: 20rpx 0;
  overflow: hidden;
  border: 1rpx solid #ffe4e8;
}
.category-tabs .tab-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.category-tabs .tab-item.active {
  color: #FF69B4;
  background-color: #fff0f5;
}
.category-tabs .tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #FF69B4;
  border-radius: 2rpx;
}
.discount-list .discount-item {
  background-color: #fff8fa;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  border: 1rpx solid #ffe4e8;
}
.discount-list .discount-item .discount-image {
  position: relative;
}
.discount-list .discount-item .discount-image image {
  width: 100%;
  height: 300rpx;
}
.discount-list .discount-item .discount-image .discount-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #ff6b35;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}
.discount-list .discount-item .discount-info {
  padding: 30rpx;
}
.discount-list .discount-item .discount-info .discount-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}
.discount-list .discount-item .discount-info .discount-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}
.discount-list .discount-item .discount-info .discount-price {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.discount-list .discount-item .discount-info .discount-price .original-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 20rpx;
}
.discount-list .discount-item .discount-info .discount-price .current-price {
  font-size: 36rpx;
  color: #ff6b35;
  font-weight: bold;
}
.discount-list .discount-item .discount-info .discount-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.discount-list .discount-item .discount-info .discount-footer .valid-date {
  font-size: 24rpx;
  color: #999;
}
.discount-list .discount-item .discount-info .discount-footer .get-btn {
  background-color: #FF69B4;
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}